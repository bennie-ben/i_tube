extends layouts/main.pug

block content
    .form__container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Video Name", name="title", value=video.title)
            textarea(placeholder="Description", name="description", value=video.description)
            input(type="submit", value="EDIT VIDEO")
        a(href=routes.deleteVideo(video.id))
            button DELETE VIDEO